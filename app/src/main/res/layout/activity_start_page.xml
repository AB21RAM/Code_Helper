<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:padding="5sp"
    tools:context=".StartPageActivity">
    <!-- A CardView that contains a TextView -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="50dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/language"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="50sp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="@string/choose_one_language_from_below"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="25sp" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_gravity="center"
            android:elevation="10dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view1"
                android:layout_width="160sp"
                android:layout_height="160sp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                card_view:cardBackgroundColor="@color/graish"
                card_view:cardCornerRadius="25dp">

                <LinearLayout
                    android:id="@+id/c_prog"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/c" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view2"
                android:layout_width="160sp"
                android:layout_height="160sp"
                android:layout_row="0"
                android:layout_column="1"
                card_view:cardBackgroundColor="@color/graish"
                card_view:cardCornerRadius="20dp">

                <LinearLayout
                    android:id="@+id/cpp_prog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="160sp"
                        android:layout_height="160sp"
                        android:src="@drawable/cpp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view3"
                android:layout_width="160sp"
                android:layout_height="160sp"
                android:layout_row="1"
                android:layout_column="0"
                card_view:cardBackgroundColor="@color/graish"
                card_view:cardCornerRadius="20dp">

                <LinearLayout
                    android:id="@+id/java_prog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="160sp"
                        android:layout_height="160sp"
                        android:src="@drawable/java" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view4"
                android:layout_width="160sp"
                android:layout_height="160sp"
                android:layout_row="1"
                android:layout_column="1"
                card_view:cardBackgroundColor="@color/graish"
                card_view:cardCornerRadius="20dp">

                <LinearLayout
                    android:id="@+id/py_prog"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="160sp"
                        android:layout_height="160sp"
                        android:src="@drawable/python" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>
    </LinearLayout>
</LinearLayout>